<!-- ヘッダー -->

<!-- 投稿内容を表示 -->
<div id="content-block">
  <div class="container custom-container be-detail-container">
    <div class="row">
      <div class="col-md-9 col-md-push-3">
        <div class="be-large-post">
          <div class="blog-content popup-gallery be-large-post-align">
            <h1 class="be-post-title to">
              <div class="be-post-title">
                <!--投稿のタイトルを表示-->
                <%= link_to(@post.title, post_path(@post)) %>
              </div>
            </h1>

            <%# <span class="be-text-tags">
								<a href="blog-detail-2.html" class="be-post-tag">Interactiob design</a>, 
								<a href="blog-detail-2.html" class="be-post-tag">UI/UX</a>,  
								<a href="blog-detail-2.html" class="be-post-tag">Web Design</a>
							</span> %>
            <div class="clear"></div>
            <div class="post-text">
              <!--投稿したテキストを表示(段落・改行を反映)-->
              <%= safe_join(@post.text.split("\n"),tag(:br)) %>
              <!--投稿画像を呼び出して表示(ある場合は)-->
              <div class="image-block">
                <% if @post.image? %>
                <%= image_tag @post.image.url, alt: "投稿画像", class: "popup-a" %>
                <% else %>
                <%= link_to image_tag("/default01.png", alt: "NO IMAGE"), post_path(@post), class: "be-img-block" %>
                <% end %>
              </div>
              <div class="image-text">
                <!--画像について説明する文章があれば表示-->
              </div>
            </div>
          </div>
          <!--カテゴリを表示-->
          <div class="be-large-post-align">
            <h3 class="letf-menu-article">
              カテゴリ
            </h3>
            <div class="tags_block clearfix">
              <ul>
                <li><a><%= @post.category.name %></a></li>
                <!--カテゴリを表示-->
              </ul>
            </div>
          </div>
          <div class="number-of-likes-and-comments">
            <div class="be-large-post-align">
              <span><i class="fa fa-eye"></i> 753</span>
              <span><i class="fa fa-comment-o"></i> 50</span>
            </div>
          </div>
        </div>
        <div class="row">
          <%# <% @posts.each do |post| %>
          <div class="col-md-4">
            <div class="be-post">
              <div>
                <%= link_to(post_path(@post), {class: "be-img-block"}) %>
              </div>
              <div>
                <!--投稿画像を呼び出して表示(ある場合は)-->
                <div class="image-block">
                  <% if @post.image? %>
                  <%= image_tag @post.image.url, alt: "投稿画像", class: "popup-a" %>
                  <% else %>
                  <%= link_to image_tag("/default01.png", alt: "NO IMAGE"), post_path(@post), class: "be-img-block" %>
                  <% end %>
                </div>
              </div>
              <div>
                <!--投稿のタイトルを表示-->
                <%= link_to(@post.title, post_path(@post), {class: "be-post-title"}) %>
              </div>
              <span>
                <!--投稿のカテゴリを表示-->
                <a class="be-post-tag"><%= @post.category.name %></a>
              </span>
              <div class="author-post">
                <!--プロフィール画像があったら表示-->
                <% if @post.user.avatar? %>
                <p>
                  <%= image_tag post.user.avatar, alt: "プロフィール画像", class: "ava-author" %>
                </p>
                <% end %>
                <!--投稿したユーザのニックネームを呼び出して表示-->
                <span>by
                  <a><%= @post.user.name %></a>
                </span>
              </div>
              <div class="number-of-likes-and-comments">
                <span><i class="fa fa-eye"></i> 789</span>
                <!--閲覧数-->
                <span><i class="fa fa-comment-o"></i> 20</span>
                <!--リプライ数-->
              </div>
            </div>
          </div>
          <%# <% end %>
        </div>
        <div class="be-comment-block">
          <h1 class="comments-title">リプライ</h1>
          <p class="about-comment-block">
            参加するには <a href="blog-detail-2.html" class="be-signup-link">ログイン</a>
            する必要があります。
          </p>
          <div class="be-comment">
            <div class="be-img-comment">
              <a href="blog-detail-2.html">
                <img src="/assets/c1.png" alt="" class="be-ava-comment">
              </a>
            </div>
            <div class="be-comment-content">

              <span class="be-comment-name">
                <a href="blog-detail-2.html">ユーザー名</a>
              </span>
              <span class="be-comment-time">
                <i class="fa fa-clock-o"></i>
                投稿日時
              </span>

              <p class="be-comment-text">
                リプライ内容
              </p>
            </div>

          </div>
        </div>
      </div>
      <div class="col-md-3 col-md-pull-9 left-feild">
        <div class="be-user-block">
          <div class="be-user-detail">
            <a class="be-ava-user" href="blog-detail-2.html">
              <img src="/assets/ava.png" alt="">
            </a>
            <p class="be-use-name"><%= @post.user.name %></p>
            <!--投稿したユーザのニックネームを呼び出して表示-->
            <span class="be-user-info">
              ここにも何か入れる
            </span>
          </div>
          <div class="be-text-userblock">
            <%= @post.user.self_introduction %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>


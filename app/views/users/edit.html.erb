<div class="be-loader">
	<div class="spinner">
		<img src="/assets/logo-loader.png" alt="">
		<p class="circle">
			<span class="ouro">
				<span class="left"><span class="anim"></span></span>
				<span class="right"><span class="anim"></span></span>
			</span>
		</p>
	</div>
</div>

<!-- ヘッダー -->

<!-- MAIN CONTENT -->
<div id="content-block">
	<div class="container be-detail-container">
		<div class="row">

			<!--<div class="col-xs-12 col-md-9 _editor-content_ justify-content-center">-->
			<div class="_editor-content_ justify-content-center">
				<div class="sec" data-sec="basic-information">
					<div class="be-large-post">
						<div class="info-block style-2">
							<div class="be-large-post-align ">
								<h3 class="info-block-label">プロフィールを編集</h3>
							</div>
						</div>
						<div class="be-large-post-align">
							<!--プロフィール画像を小さく表示し、右のボタンから画像ファイルを選択して新しいプロフィール画像を設定する-->
							<div class="be-change-ava">
								<a class="be-ava-user style-2" href="blog-detail-2.html">
									<img src="/assets/ava_10.jpg" alt="">
								</a>
								<a class="btn color-4 size-2 hover-7">画像を変更する</a>
							</div>
						</div>
						<div class="be-large-post-align">
							<div class="row">
								<div class="input-col col-xs-12 col-sm-6">
									<div class="form-group fg_icon focus-2">
										<div class="form-label">ニックネーム</div>
										<input class="form-input" type="text" value="">
									</div>
								</div>
								<div class="input-col col-xs-12 col-sm-6">
									<div class="form-label">地域</div>
									<div class="be-drop-down icon-none">
										<span class="be-dropdown-content"> 関東 </span>
										<ul class="drop-down-list">
											<li><a>北海道</a></li>
											<li><a>東北</a></li>
											<li><a>中部</a></li>
											<li><a>近畿</a></a></li>
											<li><a>中国・四国</a></li>
											<li><a>九州</a></li>
											<li><a>沖縄</a></li>
										</ul>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="sec" data-sec="edit-password">
					<!--ここでパスワードを変更する-->
					<div class="be-large-post">
						<div class="info-block style-2">
							<div class="be-large-post-align">
								<h3 class="info-block-label">パスワード</h3>
							</div>
						</div>
						<div class="be-large-post-align">
							<div class="row">
								<div class="input-col col-xs-12 col-sm-4">
									<div class="form-group focus-2">
										<div class="form-label">現在のパスワード</div>
										<input class="form-input" type="password" placeholder="">
									</div>
								</div>
								<div class="input-col col-xs-12 col-sm-4">
									<div class="form-group focus-2">
										<div class="form-label">新しいパスワード</div>
										<input class="form-input" type="password" placeholder="">
									</div>
								</div>
								<div class="input-col col-xs-12 col-sm-4">
									<div class="form-group focus-2">
										<div class="form-label">新しいパスワードを再度入力</div>
										<input class="form-input" type="password" placeholder="">
									</div>
								</div>
								<div class="col-xs-12">
									<a class="btn color-1 size-2 hover-1 btn-right">パスワードを変更する</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="sec" data-sec="about-me">
					<div class="be-large-post">
						<div class="info-block style-2">
							<div class="be-large-post-align">
								<h3 class="info-block-label">自己紹介</h3>
							</div>
						</div>
						<div class="be-large-post-align">
							<div class="row">
								<div class="input-col col-xs-12">
									<div class="form-group focus-2">
										<div class="form-label">自己紹介を入力してください（全角300文字以内）</div>
										<!--自己紹介文をここに入力-->
										<textarea class="form-input" required="" placeholder="Something about you"></textarea>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!--変更を保存するボタンを設置-->
				<a class="btn full color-1 size-1 hover-1 add_section">変更を保存</a>
			</div>
			<div class="be-vidget back-block">
				<!--マイページに戻るボタン-->
				<%= link_to :back do %>
				<button type="button" class="btn full color-1 size-1 hover-1">マイページに戻る</button>
				<%# <a class="btn full color-1 size-1 hover-1" href="author.html"><i class="fa fa-chevron-left"></i>マイページに戻る</a> %>
			</div>
			<% end %>
		</div>
	</div>
</div>


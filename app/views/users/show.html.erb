<div class="be-loader">
	<div class="spinner">
		<img src="/assets/logo-loader.png" alt="">
		<p class="circle">
			<span class="ouro">
				<span class="left"><span class="anim"></span></span>
				<span class="right"><span class="anim"></span></span>
			</span>
		</p>
	</div>
</div>


<div id="content-block">
	<div class="container be-detail-container">
		<div class="row">
			<div class="col-md-4 left-feild">
				<div class="be-user-block style-3">
					<div class="be-user-detail">
						<div class="avatar_area style-2">
							<!--プロフィール画像-->
							<% if @user.avatar? %>
							<div>
								<%= image_tag user.avatar.url, alt: "AVATAR", class: "be-img-block", size: "115x115" %>
							</div>
							<% else %>
							<div>
								<%= image_tag "/default03.jpg", alt: "NO IMAGE", class: "be-img-block", size: "115x115" %>
							</div>
							<% end %>
						</div>
						<!--ユーザーのニックネームを表示-->
						<p><span class="be-use-name"><%= @user.name %></span></p>
						<div class="be-user-info">
							<!--アカウント設定ページに飛ぶボタンを設置(自分のアカウントの場合のみ表示)-->
							<%= link_to edit_user_registration_path, class: "btn7" do %>
								<i class="fa fa-pencil"></i> 編集する
							<% end %>
						</div>
						<!--ユーザーが得意なカテゴリを表示(余裕があれば)-->
						<!--<div class="be-text-tags style-2">
								<a href="page1.html">UI/UX</a>,
								<a href="page1.html">Web Design</a>,
								<a href="page1.html">Art Direction</a>
							</div>-->
					</div>
					<!--閲覧数と高評価数を表示(余裕があれば)-->
					<!--<div class="be-user-statistic">
							<div class="stat-row clearfix"><i class="stat-icon icon-views-b"></i> Projects views<span class="stat-counter">218098</span></div>
							<div class="stat-row clearfix"><i class="stat-icon icon-like-b"></i>Appreciations<span class="stat-counter">14335</span></div>
						</div>-->
				</div>
				<!--ポイント表示部分-->
				<div class="be-user-points">
					<div class="be-desc-label">ポイント数</div>
					<div class="be-desc-text">
						<%= @user.total_points %> ポイント
					</div>
				</div>
			</div>
			<div class="col-xs-12 col-md-8">
				<div class="tab-wrapper style-1">
					<div class="tab-nav-wrapper">
						<div class="nav-tab clearfix">
							<!--質問一覧の上のタグ-->
							<div class="nav-tab-item active" data-tab="tab-questions">
								<span>質問一覧</span>
							</div>
							<div class="nav-tab-item" data-tab="tab-answers">
								<span>回答した質問一覧</span>
							</div>
						</div>
					</div>
					<div class="tabs-content questions-list">
						<div class="tab-info active" id="tab-questions">
							<!--質問一覧のパネル-->
							<div class="row">
								<% @user.questions.each do |question| %>
								<div class="question-panel-display-area">
									<div class="be-question">
										<!--質問の画像を表示(リンク付き)-->
										<% if question.images? %>
										<%= link_to image_tag(question.images[0].url, alt: "質問したイメージ"), question_path(question), class: "be-img-block" %>
										<% else %>
										<%= link_to image_tag("/default01.png", alt: "NO IMAGE"), question_path(question), class: "be-img-block" %>
										<% end %>
										<!--質問のタイトルを表示-->
										<a><%= link_to(question.title, question_path(question), class: "be-question-title") %></a>
										<span>
											<!--質問のカテゴリを表示-->
											<a class="be-question-tag"><%= question.category.name %></a>
										</span>
										<div class="author-question">
											<!--プロフィール画像を呼び出して表示-->
											<% if question.user.avatar? %>
											<p>
												<%= image_tag question.user.avatar, alt: "プロフィール画像", class: "ava-author" %>
											</p>
											<% end %>
											<!--ユーザーのニックネームを呼び出して表示-->
											<span>by <a><%= question.user.name %></a></span>
										</div>
										<div class="info-block">
											<!--閲覧数-->
											<span><i class="fa fa-eye"></i><%= question.view_count %></span>
											<!--回答数-->
											<span><i class="fa fa-answer-o"></i><%= question.answers.count %></span>
										</div>
									</div>
								</div>
								<% end %>
							</div>
						</div>
					</div>
					<div class="tabs-content answers-list">
						<div class="tab-info" id="tab-answers">
							<!--回答した質問の一覧のパネル-->
							<div class="row">
								<% @answers.each do |answer| %>
								<div class="question-panel-display-area">
									<div class="be-question">
										<!--回答した質問の画像を表示(リンク付き)-->
										<% if answer.question.images? %>
											<%= link_to image_tag(answer.question.images[0].url, alt: "質問したイメージ"), question_path(answer.question), class: "be-img-block" %>
										<% else %>
											<%= link_to image_tag("/default01.png", alt: "NO IMAGE"), question_path(answer.question), class: "be-img-block" %>
										<% end %>
										<!--回答した質問のタイトルを表示-->
										<a><%= link_to(answer.question.title, question_path(answer.question), class: "be-question-title") %></a>
										<span>
											<!--回答した質問のカテゴリを表示-->
											<a class="be-question-tag"><%= answer.question.category.name %></a>
										</span>
										<div class="author-question">
											<!--回答した質問をしたユーザーのプロフィール画像を呼び出して表示-->
											<% if answer.question.user.avatar? %>
											<p>
												<%= image_tag answer.question.user.avatar, alt: "プロフィール画像", class: "ava-author" %>
											</p>
											<% end %>
											<!--回答した質問をしたユーザーのニックネームを呼び出して表示-->
											<span>by <a><%= answer.question.user.name %></a></span>
										</div>
										<div class="info-block">
											<!--回答した質問の閲覧数-->
											<span><i class="fa fa-eye"></i><%= answer.question.view_count %></span>
											<!--回答した質問への回答数-->
											<span><i class="fa fa-answer-o"></i><%= answer.question.answers.count %></span>
										</div>
									</div>
								</div>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


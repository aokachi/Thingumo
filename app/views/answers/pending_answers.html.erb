<div class="be-loader">
	<div class="spinner">
		<img src="/assets/logo-loader.png" alt="">
		<p class="circle">
			<span class="ouro">
				<span class="left"><span class="anim"></span></span>
				<span class="right"><span class="anim"></span></span>
			</span>
		</p>
	</div>
</div>

<!-- ヘッダー -->

<!-- MAIN CONTENT -->
<div id="content-block">
	<div class="container-fluid_2 custom-container">
		<div class="row">
			<!--質問の一覧を表示-->
			<div class="container-pending-answers">
				<div class="col-md-10">
					<div id="container-mix" class="row _question-container_">
						<!--ここに画面のタイトルを入れる-->
						<div class="pending_answers_page_title">
							<h2 class="info-block-label">保留中回答一覧確認画面</h2>
						</div>
						<% @questions_with_pending_answers.each do |question| %>
						<div class="category-1 mix custom-column-5">
							<div class="be-question">
								<!--質問画像を呼び出して表示(リンク付き)-->
								<% if question.images.attached? %>
								<%= link_to image_tag(question.images.first, alt: "質問したイメージ"), question_path(question), class: "be-img-block" %>
								<% else %>
								<%= link_to image_tag("/default01.png", alt: "NO IMAGE"), question_path(question), class: "be-img-block" %>
								<% end %>
								<!--質問のタイトルを表示-->
								<a><%= link_to(question.title, question_path(question), class: "be-question-title") %></a>
								<span>
									<!--質問のカテゴリを表示-->
									<a class="be-question-tag"><%= question.category.name %></a>
								</span>
								<div class="author-question">
									<!--プロフィール画像を呼び出して表示-->
									<% if question.user.avatar.attached? %>
										<%= image_tag question.user.avatar, alt: "プロフィール画像", class: "rounded-circle", size: "150x150" %>
									<% else %>
										<%= image_tag "/default01.png", alt: "NO IMAGE", class: "rounded-circle", size: "150x150" %>
									<% end %>
									<!--質問したユーザのニックネームを呼び出して表示-->
									<span>by <a><%= question.user.name %></a></span>
								</div>
								<div class="info-block">
									<!--質問数-->
									<span><i class="fa fa-eye"></i><%= question.view_count %></span>
									<!--リプライ数-->
									<span><i class="fa fa-answer-o"></i><%= question.answers.count %></span>
								</div>
							</div>
						</div>
						<% end %>
						<%= paginate @questions_with_pending_answers %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- フッター -->

<div class="be-fixed-filter"></div>


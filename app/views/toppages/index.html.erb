<!-- ヘッダー -->

<!-- MAIN CONTENT -->
<div id="content-block">
	<div class="head-bg">
		<div class="head-bg-img"></div>
		<div class="head-bg-content">
			<h1>Thingumo</h1>
			<p>名前がわからない・思い出せない人やモノについて質問できます。</p>
			<a class="be-register btn color-3 size-1 hover-6"><i class="fa fa-lock"></i>アカウントを作成</a>
		</div>
	</div>
	<div class="container-fluid custom-container">
		<div class="row">
			<!--カテゴリの一覧を表示・選択-->
			<div class="col-md-2 left-feild">
				<div class="be-vidget">
					<h3 class="letf-menu-article">
						カテゴリから選択
					</h3>
					<div class="creative_filds_block">
						<div class="ul">
							<% @categories.each do |category| %>
							<%= link_to category.name, root_path(category_id: category.id), class: "filter" %>
							<% end %>
						</div>
					</div>
				</div>
			</div>

			<!--投稿の一覧を表示-->
			<div class="col-md-10">
				<div id="container-mix" class="row _post-container_">
					<% @posts.each do |post| %>
					<div class="category-1 mix custom-column-5">
						<div class="be-post">
							<!--投稿画像を呼び出して表示(リンク付き)-->
							<% if post.image? %>
							<%= link_to image_tag(post.image.url, alt: "投稿したイメージ"), post_path(post), class: "be-img-block" %>
							<% else %>
							<%= link_to image_tag("/default01.png", alt: "NO IMAGE"), post_path(post), class: "be-img-block" %>
							<% end %>
							<!--投稿のタイトルを表示-->
							<a><%= link_to(post.title, post_path(post), class: "be-post-title") %></a>
							<span>
								<!--投稿のカテゴリを表示-->
								<a class="be-post-tag"><%= post.category.name %></a>
							</span>
							<div class="author-post">
								<!--プロフィール画像を呼び出して表示-->
								<% if post.user.avatar? %>
								<%= image_tag post.user.avatar, alt: "プロフィール画像", class: "rounded-circle", size: "150x150" %>
								<% else %>
								<%= image_tag "/default01.png", alt: "NO IMAGE", class: "rounded-circle", size: "150x150" %>
								<% end %>
								<!--投稿したユーザのニックネームを呼び出して表示-->
								<span>by <a><%= post.user.name %></a></span>
							</div>
							<div class="info-block">
								<!--投稿数-->
								<span><i class="fa fa-eye"></i> 789</span>
								<!--リプライ数-->
								<span><i class="fa fa-comment-o"></i><%= "#{post.comments.count} コメント" %></span>
							</div>
						</div>
					</div>
					<% end %>
					<%= paginate @posts %>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- フッター -->

<div class="be-fixed-filter"></div>

<div class="large-popup login">
	<div class="large-popup-fixed"></div>
	<div class="container large-popup-container">
		<div class="row">
			<div class="col-md-8 col-md-push-2 col-lg-6 col-lg-push-3  large-popup-content">
				<div class="row">
					<div class="col-md-12">
						<i class="fa fa-times close-button"></i>
						<h5 class="large-popup-title">ログイン</h5>
					</div>
					<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
					<div class="col-md-6">
						<%= f.email_field :email, class: 'input-signtype', placeholder: "メールアドレスを入力してください" %>
						<%= f.password_field :password, class: 'input-signtype', placeholder: "パスワードを入力してください" %>
					</div>
					<div class="col-xs-6 for-signin">
						<%= f.submit 'ログイン', class: 'be-popup-sign-button' %>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="large-popup register">
	<div class="large-popup-fixed"></div>
	<div class="container large-popup-container">
		<div class="row">
			<div class="col-md-10 col-md-push-1 col-lg-8 col-lg-push-2 large-popup-content">
				<div class="row">
					<div class="col-md-12">
						<i class="fa fa-times close-button"></i>
						<h5 class="large-popup-title">アカウント作成</h5>
					</div>
					<%= form_with model: User.new, url: signup_path, local: true do |f| %>
					<div class="col-md-6">
						<%= f.text_field :name, :class => "input-signtype", :placeholder => "ニックネーム" %>
					</div>
					<div class="col-md-6">
						<%= f.email_field :email, :class => "input-signtype", :placeholder => "Eメール" %>
					</div>
					<div class=" col-md-6">
						<%= f.password_field :password, :class => "input-signtype", :placeholder => "パスワード" %>
					</div>
					<div class="col-md-6">
						<%= f.password_field :password_confirmation, :class => "input-signtype", :placeholder => "パスワードをもう一度入力してください" %>
					</div>
					<div class="col-md-6">
						<div class="be-custom-select-block">
							<%= f.label :sex, '性別'%>
							<%= f.select :sex, {'男性': 1, '女性': 2, 'その他': 3}, { include_blank: '性別' }, { class: 'be-custom-select', required: true } %>
						</div>
					</div>
					<div class="col-md-6 be-date-block">
						<div class="form-group">
							<%= f.label :birthday, '生年月日' %>
							<%= f.date_field :birthday, class: 'form-control' %>
						</div>
						<!--生年月日入力フォームその2-->
						<%# <div class="input-date">
							<input name="date" type="date" />
						</div> %>
					</div>
					<div class="col-md-6 for-signin">
						<%= f.submit '登録する', class: 'be-popup-sign-button' %>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
